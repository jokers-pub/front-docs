        &lt;/div&gt;
        &lt;div&gt;
            &lt;input value=&quot;I'm already @(model.age) years old.&quot; type=&quot;text&quot; /&gt;
        &lt;/div&gt;
    &lt;/DemorRow&gt;
    &lt;button @click=&quot;handleClick&quot;&gt;Increase the age&lt;/button&gt;
&lt;/template&gt;
