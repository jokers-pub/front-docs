<template>
    <button @click="handleClick">Click me to load the child component</button>
    <div ref="container"></div>
</template>
<script>
import { Component } from "@joker.front/core";
import MyComponent from "./children.joker";

export default class extends Component {
    isMounted = false;

    handleClick() {
        if (this.isMounted) return;

        this.isMounted = true;

        new MyComponent().$mount(this.$getRef("container")?.output);
    }
}
</script>